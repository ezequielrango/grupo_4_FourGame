        <h2>Productos Relacionados</h2>
        
        <div class="decoracion">
            <!-- LINEA DECORATIVA -->
        </div>

        <section class="productos">
            <%relatedProducts.forEach(relatedProduct => {%>
                <%if(relatedProduct.type == product.type){%>
                    <article>
                        <a href="/products/detail/<%=relatedProduct.id%>" class="a-article">
                            <div class="contenedor-img">
                                <img src="/images/<%=relatedProduct.type%>/<%=relatedProduct.name%>/<%=relatedProduct.image%>" alt="<%=relatedProduct.name%>">
                            </div>

                            <div class="product-info">
                                <button><i class="far fa-heart"></i></button>

                                <div class="title">
                                    <h3> <%=relatedProduct.name%>  </h3>
                                </div>
                                <div class="info">
                                    <p class="price">$ <%=toThousand(relatedProduct.price)  %>  </p>
                                    <%if(relatedProduct.payMethod > 0){%>
                                        <p class="t-cuotas"><%=relatedProduct.payMethod%>x $ <%=toThousand((relatedProduct.price / relatedProduct.payMethod).toFixed(0))%> sin interés</p>
