            <a href="/products/detail-Product"> <%=product.name%></a>
        </div>

        <section class="vista">
            <div class="div-img-miniaturas">
                <div class="vista-miniaturas">
                    <!-- <button class="b-miniatura"><img src="/images/Pc/PC-Armada-Media-0026_600.jpg" alt="PC gama media AMD"></button>
