<!DOCTYPE html>
<html lang="es">
    <%- include("./partials/head",{title : `Iniciar sesion`}) %> 

<body class="login">
    <%- include("./partials/header") %> 
    <main>
        <div class="ruta">
            <a href="/">Inicio</a>
            <span>></span>
            <a class="a-posicion" href="/users/login">Iniciar sesión</a>
        </div>


        <form class="contenedorlogin" method="POST" action = '/users/login'>

            <i class="fas fa-user-circle item-user"></i>
            <h1>Iniciar sesión</h1>
            <input name="email" class="sesioninit" type="email" placeholder="Email">
            <input name="password" class="sesioninit" type="password" placeholder="Contraseña">

            <div style="text-align:center;">
                <input type="checkbox" name="rememberSession" id="rememberSession">
                <label for="rememberSession" class="labelremember" >Recordarme</label>
            </div>
            <%if( locals.errors && locals.errors.email){%>
                <p style="color: red; font-size: 15px;"><%=errors.email.msg%></p>
            <%}%>

            <button class="enter" type="submit">Ingresar</button>

            <div class="notenescuenta">
                <h4>¿no tenés una cuenta?</h4>
                <a href="/users/register">Registrate</a>
            </div>
        </form>

    </main>
    <%- include("./partials/footer") %> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>