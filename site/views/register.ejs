<!DOCTYPE html>
<html lang="es">

    <%- include("./partials/head",{title : `Registrate`}) %> 

<body class="register">
<%- include("./partials/header") %> 
    <main>
        <div class="ruta">
            <a href="/">Inicio</a>
            <span>></span>
            <a href="/users/login">Iniciar sesión</a>
            <span>></span>
            <a class="a-posicion" href="/users/register">Crear cuenta</a>
        </div>


        <form class="contenedorlogin" action="/users/register" method="POST">

            <i class="fas fa-user-circle item-user"></i>
            <h1>Registrate</h1>
           <div class="cajapadre">
            <div class="box-input">
                <input name="name" class="sesioninit" type="text" placeholder="Nombre" >
                <%if(locals.errors && errors.name){%>  
                    <p class="error"><%=errors.name.msg%></p> 
                <%}%>

                <input name="email" class="sesioninit" type="text" placeholder="Email" >
                <%if(locals.errors && errors.email){%>  
                    <p class="error"><%=errors.email.msg%></p> 
                <%}%>
            </div>

           <div class="box-input2">
            <input name="password" class="sesioninit" type="password" placeholder="Contraseña" >
            <%if (locals.errors && errors.password) {%>
                <p class="error"><%=errors.password.msg%></p>
            <% } %> 
            <input name="password2" class="sesioninit" type="password" placeholder="Confirmar contraseña" >
            <%if (locals.errors && errors.password2) {%>
                <p class="error"><%=errors.password2.msg%></p>
            <% } %> 
        </div>
        </div>


            <div class="captcha">
           </div>
            <button class="enter" type="submit">Registrarse</button>

            <div class="notenescuenta">
                <h4>¿Ya tenés una cuenta?</h4>
                <a href="/users/login">Inicia sesion</a>
            </div>

        </form>
            <div class="vacio">

            </div>
    </main>
    <%- include("./partials/footer") %> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>

</html>
